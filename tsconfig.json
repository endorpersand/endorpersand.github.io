{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "ESNext",
        "DOM",
        "DOM.Iterable"
      ],
      "module": "es2020",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": ["src/**/*"]
}